<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/capital_w400"
    tools:context="com.example.michang.represent.MenuActivity">
    <Button
        android:id="@+id/choose_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ZIPCODE"
        android:textColor="@color/offBlack"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:background="#88ffffff"/>
    <Button
        android:id="@+id/choose_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CURRENT LOCATION"
        android:textColor="@color/offBlack"
        android:padding="10dp"
        android:layout_below="@id/choose_zip"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:background="#88ffffff"/>
    <Button
        android:id="@+id/choose_shake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHAKE"
        android:textColor="@color/offBlack"
        android:padding="10dp"
        android:layout_below="@id/choose_loc"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:background="#88ffffff"
        android:layout_alignParentStart="true" />
</RelativeLayout>
