<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    tools:context="com.example.michang.represent.DistrictMenuActivity">
    <TextView
        android:id="@+id/county"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/republican"
        android:text="Santa Clara County"/>
    <TextView
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/county"
        android:textColor="@color/offBlack"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="California"/>
    <Button
        android:id="@+id/congress_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/state"
        android:textColor="@color/offWhite"
        android:padding="5dp"
        android:textAlignment="center"
        android:background="@color/darkBlueberry"
        android:text="CONGRESS"/>
    <Button
        android:id="@+id/vote_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/congress_button"
        android:textColor="@color/offWhite"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:background="@color/darkBlueberry"
        android:text="2012 VOTE STATS"/>
</RelativeLayout>
